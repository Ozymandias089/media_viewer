<div class="card <%= type %>" data-type="<%= type %>" data-url="<%= url %>" data-index="<%= index %>">
  <% if (type === 'directory') { %>
    <a href="<%= url %>" class="folder-link">
      <div class="folder-icon">📁</div>
      <div class="folder-name"><%= name %></div>
    </a>
  <% } else if (type === 'image') { %>
    <img src="<%= url %>" alt="<%= name %>" class="preview-image"/>
  <% } else if (type === 'video') { %>
    <video src="<%= url %>" autoplay muted playsinline loop class="preview-video"></video>
  <% } else { %>
    <div class="file-icon">📄</div>
    <div class="file-name"><%= name %></div>
  <% } %>
</div>
